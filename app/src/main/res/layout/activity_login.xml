<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ph.edu.upd.eee.weighttrack.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:background="@color/weighttrakblue"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/weighttrakblue"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/infinity"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:font="@font/abelregular"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imageView_emailIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/dave2d"
                android:padding="8dp"
                android:src="@drawable/img_email"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/input_email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_emailIcon"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView_emailIcon"
                android:layout_toRightOf="@+id/imageView_emailIcon"
                android:background="@color/white"
                android:hint="Email"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/imageView_passwordIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/dave2d"
                android:padding="8dp"
                android:src="@drawable/img_authentication"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_passwordIcon"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView_passwordIcon"
                android:background="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:textSize="15sp"
                tools:ignore="RtlSymmetry"
                android:layout_toRightOf="@+id/imageView_passwordIcon"
                android:paddingLeft="20dp" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout2"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/buttoncolor"
            android:fontFamily="@font/abelregular"
            android:text="Login"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn_login"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:fontFamily="@font/abelregular"
            android:text="Register"
            android:textColor="@color/black"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</RelativeLayout>
